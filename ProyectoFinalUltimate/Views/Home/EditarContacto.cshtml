@model ProyectoFinalUltimate.Models.Contact

@{
    ViewBag.Title = "EditarContacto";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>EditarContacto</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
